<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Flintlock Musket ==================== -->

	<ThingDef ParentName="BaseMakeableGun">
		<defName>TA_MilitaryMusket</defName>
		<label>military matchlock musket</label>
		<description>.</description>
		<techLevel>Medieval</techLevel>
		<graphicData>
			<texPath>Weapons/Ranged/TA_MilitaryMusket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.15</drawSize>
		</graphicData>
		<equippedAngleOffset>45</equippedAngleOffset>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponClasses>
			<li>LongShots</li>
		</weaponClasses>
		<statBases>
			<WorkToMake>13000</WorkToMake>
			<Mass>6.50</Mass>
			<Bulk>14.50</Bulk>
			<ShotSpread>0.04</ShotSpread>
			<SwayFactor>2.10</SwayFactor>
			<SightsEfficiency>0.95</SightsEfficiency>
			<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<WoodLog>15</WoodLog>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>2.58</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_75CalBall500mps</defaultProjectile>
				<warmupTime>1.7</warmupTime>
				<range>35</range>
				<soundCast>Shot_CE_Musket</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags Inherit="False">
			<li>NeolithicRangedHeavy</li>
			<li>NeolithicRangedChief</li>
			<li>Bipod_Rifle</li>
		</weaponTags>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>1</magazineSize>
				<AmmoGenPerMagOverride>4</AmmoGenPerMagOverride>
				<reloadTime>8</reloadTime>
				<ammoSet>AmmoSet_75CalBall500mps</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
		<recipeMaker>
			<recipeUsers>
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
			</recipeUsers>
			<researchPrerequisite>CE_Gunpowder</researchPrerequisite>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.20,0.20</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>