<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]</xpath>
		<value>
			<RecipeDef ParentName="AmmoRecipeBase">
				<defName>MakeAmmo_MusketBall</defName>
				<label>make musket ball x50</label>
				<description>Craft 50 musket balls.</description>
				<jobString>Making musket balls.</jobString>
				<researchPrerequisite>CE_Gunpowder</researchPrerequisite>
				<workAmount>1200</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>Steel</li>
							</thingDefs>
						</filter>
						<count>10</count>
					</li>
					<li>
						<filter>
							<thingDefs>
								<li>Cloth</li>
							</thingDefs>
						</filter>
						<count>4</count>
					</li>
				</ingredients>
				<fixedIngredientFilter>
					<thingDefs>
						<li>Steel</li>
						<li>Cloth</li>
					</thingDefs>
				</fixedIngredientFilter>
				<products>
					<Ammo_MusketBall>50</Ammo_MusketBall>
				</products>
			</RecipeDef>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="MakeAmmo_BlunderbussShot"]</xpath>
		<value>
			<RecipeDef ParentName="AmmoRecipeBase">
				<defName>MakeAmmo_BlunderbussShot</defName>
				<label>make blunderbuss shot x30</label>
				<description>Craft 30 blunderbuss shots.</description>
				<jobString>Making blunderbuss shots.</jobString>
				<researchPrerequisite>CE_Gunpowder</researchPrerequisite>
				<workAmount>1000</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>Steel</li>
							</thingDefs>
						</filter>
						<count>8</count>
						<li>
							<filter>
								<thingDefs>
									<li>Cloth</li>
								</thingDefs>
							</filter>
							<count>4</count>
						</li>
					</li>
				</ingredients>
				<fixedIngredientFilter>
					<thingDefs>
						<li>Steel</li>
						<li>Cloth</li>
					</thingDefs>
				</fixedIngredientFilter>
				<products>
					<Ammo_BlunderbussShot>30</Ammo_BlunderbussShot>
				</products>
			</RecipeDef>
		</value>
	</Operation>

</Patch>