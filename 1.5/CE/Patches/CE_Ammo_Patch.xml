					<li>Cloth</li>
				</thingDefs>
			</fixedIngredientFilter>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_BlunderbussShot"]/products/Ammo_BlunderbussShot</xpath>
