		<value>
			<description>Craft 30 blunderbuss shots.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_BlunderbussShot"]/workAmount</xpath>
		<value>
			<workAmount>1000</workAmount>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_BlunderbussShot"]/ingredients</xpath>
		<value>
			<ingredients>
				<li>
					<filter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</filter>
					<count>8</count>
					<li>
						<filter>
							<thingDefs>
								<li>Cloth</li>
							</thingDefs>
						</filter>
						<count>4</count>
					</li>
				</li>
			</ingredients>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_BlunderbussShot"]/fixedIngredientFilter</xpath>
		<value>
			<fixedIngredientFilter>
