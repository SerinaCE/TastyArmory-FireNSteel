<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Musket Ball Recipe ========== -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/label</xpath>
		<value>
			<label>make musket ball x50</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/label</xpath>
		<value>
			<description>Craft 50 musket balls.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/workAmount</xpath>
		<value>
			<workAmount>1200</workAmount>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/ingredients</xpath>
		<value>
			<ingredients>
				<li>
					<filter>
						<thingDefs>
							<li>Steel</li>
						</thingDefs>
					</filter>
					<count>10</count>
				</li>
				<li>
					<filter>
						<thingDefs>
							<li>Cloth</li>
						</thingDefs>
					</filter>
					<count>4</count>
				</li>
			</ingredients>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/fixedIngredientFilter</xpath>
		<value>
			<fixedIngredientFilter>
				<thingDefs>
					<li>Steel</li>
					<li>Cloth</li>
				</thingDefs>
			</fixedIngredientFilter>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="MakeAmmo_MusketBall"]/products/Ammo_MusketBall</xpath>
		<value>
			<Ammo_MusketBall>50</Ammo_MusketBall>
		</value>
	</Operation>

	<!-- ========== Blunderbuss Shot Recipe ========== -->
	
